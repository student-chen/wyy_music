.navBar {
	width: 750rpx; 
	height: 90rpx; 
	display: flex; 
	flex-direction: row; 
	align-items: center; 
	background: #fff; 
	justify-content: space-around;
}

.order-tab {
	/*width: 60rpx;*/
	font-size: 28rpx;
	line-height: 40rpx;
	border-bottom: solid 4rpx transparent;
}

.order-tab.selected {
	/*width: 60rpx;*/
	font-weight: bold;
	border-bottom-color: var(--themeColor);
}

.two-lines {
	width: 200rpx; 
	height: 70rpx; 
	font-size: 24rpx;
	color: #666;
	display: -webkit-box; 
	overflow: hidden; 
	text-overflow: ellipsis; 
	word-wrap: break-word; 
	white-space: normal !important; 
	-webkit-line-clamp: 2; 
	-webkit-box-orient: vertical;
}

.background_image {
	width: 200rpx; 
	height: 200rpx; 
	border-radius: 10rpx; 
	background-repeat: no-repeat; 
	background-size: 200rpx 200rpx;
}

.category_common {
	width: 690rpx; 
	height: 60rpx; 
	line-height: 60rpx; 
	color: #000;
	margin: 20rpx 0 0 30rpx; 
	font-size: 26rpx; 
	border-radius: 40rpx; 
	text-align: center; 
	background-color: #f5f5f5;
}

.category_common_1 {
	width: 150rpx; 
	height: 60rpx; 
	line-height: 60rpx; 
	color: #000;
	font-size: 26rpx; 
	margin-top: 20rpx; 
	border-radius: 40rpx; 
	background-color: #f5f5f5; 
	text-align: center
}

.category_common.selected, .category_common_1.selected{
	background-color: #ff0000;
	color: #fff; 
}

.confirmBtn {
	width: 690rpx; 
	height: 90rpx; 
	line-height: 90rpx; 
	font-weight: bold; 
	font-size: 38rpx; 
	text-align: center; 
	margin-left: 30rpx; 
	margin-top: 60rpx; 
	background-color: var(--themeColor); 
	border-radius: 40rpx; color: #fff;
}