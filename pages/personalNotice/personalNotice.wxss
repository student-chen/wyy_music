.navBar {
	width: 750rpx; 
	height: 70rpx; 
	display: flex; 
	flex-direction: row; 
	align-items: center; 
	background: #fff; 
	justify-content: space-around;
	border-bottom: solid 2rpx #f5f5f5;
}

.order-tab {
	font-size: 28rpx;
	line-height: 70rpx;
	border-bottom: solid 4rpx transparent;
}

.order-tab.selected {
	font-weight: bold;
	color: var(--themeColor);
	border-bottom-color: var(--themeColor);
}