page {
  background-color: var(--themeColor);
}

.login {
  width: 100%;
  height: 100%;
}

.login .icon {
  width: 40%;
  height: 300rpx;
  margin-top: 40rpx;
  margin-left: 30%;
}

.login .login_path {
  margin-top: 200rpx;
  width: 100%;
  height: 200rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.login .login_path .phone {
  width: 350rpx;
  height: 70rpx;
  color: var(--themeColor);
  background-color: #fff;
  border-radius: 50rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
}

.login .login_path .email {
  margin-top: 40rpx;
  width: 350rpx;
  height: 70rpx;
  color: #fff;
  background-color: var(--themeColor);
  border-radius: 50rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  border: 2rpx solid #666;
}

.login .serve {
  width: 100%;
  margin-top: 70%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login .serve .serve_name {
  color: #fff;
  font-size: 24rpx;
}

.common {
    width: 750rpx;
    height: 600rpx;
    background: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
    top: auto;
}

.login_title {
    width: 240rpx;
    height: 34rpx;
    text-align: center;
    font-weight: 500;
    margin-top: 39rpx;
    margin-left: 255rpx;
    font-size: 36rpx;
}

.close {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 30rpx;
    right: 40rpx;
}

.loginBtn {
    width: 670rpx;
    height: 110rpx;
    background: #ff0000; 
    border-radius: 12rpx;
    text-align: center; 
    margin-left: 40rpx;
    line-height: 110rpx;
    color: #fff;
    margin-top: 60rpx;
    padding: 0;
} 

input.account {
    margin-left: 60rpx;
    margin-top: 60rpx;
    font-size: 36rpx;
    color: #333;
    text-align: left;
}

input.password {
    margin-left: 60rpx;
    margin-top: 50rpx;
    font-size: 36rpx;
    color: #333;
    text-align: left;
    margin-bottom: 20rpx;
}

.line-1{
    width: 670rpx; 
    height: 2rpx; 
    background: #fafafa; 
    margin-top: 30rpx;
}

.login_phone, .login_email {
    pointer-events: none;
	opacity: 0;
	position: absolute;
	left: 0; 
	bottom: -60rpx;
	width: 750rpx;
	transition: opacity 0.3s, transform 0.3s;
}

.login_phone.visible,
.login_email.visible {
    pointer-events: auto;
	opacity: 1;
	transform: none;
}