}

.line-1{
    width: 670rpx; 
    height: 2rpx; 
    background: #fafafa; 
    margin-top: 30rpx;
}

.registerBtn {
    height: 110rpx;
    background: #ff0000; 
    border-radius: 12rpx;
    text-align: center; 
    margin-left: 40rpx;
    line-height: 110rpx;
    color: #ff0000;
    margin-top: 60rpx;
    padding: 0;
    background-color: #ffffff; 
}

.captchaBtn {
    width: 220rpx; 
    height: 56rpx; 
    border-radius: 12rpx; 
    border: 2rpx solid #FD6003; 
    position: absolute; 
    top: 480rpx; 
    right: 30rpx; 
    color: #FD6003; 
    text-align: center; 
    line-height: 24rpx; 
    background: #fff; 
    font-size: 24rpx;
}