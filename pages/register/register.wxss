page {
	background-color: var(--themeColor);
}

.registerForm {
	width: 100%;
	height: 100%
}

input.account, input.nickname {
    margin-left: 60rpx;
    margin-top: 60rpx;
    font-size: 36rpx;
    color: #333;
    text-align: left;
}

input.captcha {
    width: 190rpx;
    margin-left: 60rpx;
    margin-top: 60rpx;
    font-size: 36rpx;
    color: #333;
    text-align: left;
}

input.password {
    margin-left: 60rpx;
    margin-top: 50rpx;
    font-size: 36rpx;
    color: #333;
    text-align: left;
