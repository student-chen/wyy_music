.container {
  background-color: -webkit-linear-gradient(#ff0000 47%, #f5f5f5 53%);
  background-color: -o-linear-gradient(#ff0000 47%, #f5f5f5 53%);
  background-color: linear-gradient(#ff0000 47%, #f5f5f5 53%);
}
.container .login {
    width: 200rpx;
    height: 90rpx;
    background-color: #ff0000;
    line-height: 90rpx;
    text-align: center;
    font-size: 36rpx;
    border-radius: 15rpx;
    color: #fff;
    margin-top: 40rpx;
    margin-left: 150rpx;
}
.container .register {
    width: 200rpx;
    height: 90rpx;
    background-color: #ff0000;
    line-height: 90rpx;
    text-align: center;
    font-size: 36rpx;
    border-radius: 15rpx;
    color: #fff;
    margin-top: 40rpx;
    margin-left: 40rpx;
}
.container .userinfo {
    width: 100%;
    height: 180rpx;
    padding-top: 40rpx;
    border-bottom: 2rpx solid #fafafa;
    background-color: #fafafa;
}
.container .userinfo .userAvatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-left: 20rpx;
}
.container .userinfo .userinfo_name {
    display: flex;
    flex-direction: column;
    margin-left: 40rpx;
}
.container .userinfo .userinfo_name .name {
    font-size: 32rpx;
    color: #666;
}
.container .userinfo .userinfo_name .userId {
    font-size: 28rpx;
    color: #999;
    padding-top: 20rpx;
}
.container .userinfo .getline {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    width: 100rpx;
    height: 40rpx;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 40rpx;
    border-radius: 20rpx;
    background-color: var(--themeColor);
}

.mime_list {
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.mime_list_title {
    color: #999;
    font-size: 36rpx;
    margin-left: 43rpx;
}

.mime_list_image {
    width: 14rpx;
    height: 24rpx;
    margin-right: 40rpx;
}

.body_container {
    width: 670rpx; 
    display: flex; 
    flex-direction: column; 
    margin-top: 50rpx; 
    margin-left: 40rpx;
    box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05); 
    background-color: #fff; 
    border-radius: 12rpx; 
    padding: 16rpx 0; 
}

.logoutBtn {
    width: 250rpx;
    font-size: 36rpx;
    color: #ffffff;
    margin-top: 94rpx;
    background-color: #ff0000;
    border-radius: 24rpx; 
    margin-left: 250rpx; 
    text-align: center; 
    height: 90rpx;
    line-height: 90rpx;
}

.one_line {
    width: 590rpx;
    height: 2rpx;
    background-color: #f5f5f5;
    margin-left: 40rpx;
}